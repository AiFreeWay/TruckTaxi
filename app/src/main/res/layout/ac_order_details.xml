<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mercury">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ac_order_details_app_bar_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/ac_order_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/colorAccent" />
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/ac_order_details_ll_routes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac_order_details_app_bar_layout">

            <TextView
                style="@style/TitleText"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="@dimen/internal_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/external_padding"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/external_padding"
                android:text="@string/routes" />

            <TextView
                style="@style/BoldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/external_padding"
                android:text="@string/from_address" />

            <TextView
                android:id="@+id/ac_order_details_tv_from"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/internal_padding"
                android:text="@string/test_address_from" />

            <TextView
                android:id="@+id/ac_order_details_tv_phone_from"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/internal_padding"
                android:text="@string/test_phone_from" />

            <TextView
                style="@style/BoldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/external_padding"
                android:text="@string/address_to" />

            <TextView
                android:id="@+id/ac_order_details_tv_to"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/internal_padding"
                android:text="@string/test_address_to" />

            <TextView
                android:id="@+id/ac_order_details_tv_phone_to"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/internal_padding"
                android:text="@string/test_phone_to" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/internal_padding"
                android:background="@drawable/drop_shadow_gray"
                android:paddingBottom="@dimen/internal_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/mercury" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ac_order_details_ll_payments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac_order_details_ll_routes">

            <TextView
                style="@style/TitleText"
                android:drawableLeft="@drawable/ic_payments_two"
                android:drawablePadding="@dimen/internal_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/external_padding"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/external_padding"
                android:text="@string/payments" />

            <android.support.design.widget.TabLayout
                android:id="@+id/ac_order_details_tb_payments_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabTextColor="@color/mineShaft"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/internal_padding"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/ac_order_details_vp_payments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/left_text_height"
                android:paddingRight="@dimen/external_padding"
                android:paddingTop="@dimen/internal_padding"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/internal_padding"
                android:background="@drawable/drop_shadow_gray"
                android:paddingBottom="@dimen/internal_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/mercury" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>