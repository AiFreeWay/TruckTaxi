<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mercury">

    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/drop_shadow_gray"/>

    <TextView
        android:id="@+id/fmt_auth_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_on_auth_screen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/external_padding"
        android:paddingRight="@dimen/external_padding"
        android:paddingTop="@dimen/external_padding"
        android:paddingBottom="@dimen/internal_padding"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Text"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fmt_auth_til_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/external_padding"
        android:paddingRight="@dimen/external_padding"
        android:paddingTop="@dimen/internal_padding"
        android:paddingBottom="@dimen/internal_padding"
        app:layout_constraintTop_toBottomOf="@+id/fmt_auth_tv_title">

        <EditText
            android:id="@+id/fmt_auth_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/id" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fmt_auth_til_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/external_padding"
        android:paddingRight="@dimen/external_padding"
        android:paddingTop="@dimen/internal_padding"
        android:paddingBottom="@dimen/internal_padding"
        app:layout_constraintTop_toBottomOf="@+id/fmt_auth_til_id">

        <EditText
            android:id="@+id/fmt_auth_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/password" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/fmt_auth_swt_show_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:padding="@dimen/external_padding"
        app:layout_constraintTop_toBottomOf="@+id/fmt_auth_til_password"
        android:text="@string/show_password"
        android:checked="false"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fmt_auth_btn_enter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:padding="@dimen/external_padding"
        app:layout_constraintTop_toBottomOf="@+id/fmt_auth_swt_show_password"
        android:text="@string/input" />
</android.support.constraint.ConstraintLayout>