<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fmt_home_iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/test_rider" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/external_padding"
            android:text="Кузнецов Федор Георгиевич" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/external_padding"
            android:text="+79270562891" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/internal_padding"
            android:text="kuznechov@mail.ru" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/internal_padding"
            android:background="@drawable/drop_shadow_gray"
            android:paddingBottom="@dimen/internal_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/mercury" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/internal_padding"
            android:text="Водительское удостоверение" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/internal_padding"
            android:scaleType="centerInside"
            android:src="@drawable/rights" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/external_padding"
            android:text="@string/edit"
            android:textAllCaps="true"
            android:textColor="@color/doveGray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/drop_shadow_gray"
            android:paddingBottom="@dimen/internal_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/mercury" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/internal_padding"
            android:text="Cвидетельство о регистрации" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/internal_padding"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/external_padding"
            android:text="@string/edit"
            android:textAllCaps="true"
            android:textColor="@color/doveGray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/drop_shadow_gray"
            android:paddingBottom="@dimen/internal_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/mercury" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/internal_padding"
            android:text="ПТС" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/internal_padding"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/external_padding"
            android:text="@string/edit"
            android:textAllCaps="true"
            android:textColor="@color/doveGray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/drop_shadow_gray"
            android:paddingBottom="@dimen/internal_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/mercury" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/external_padding"
            android:paddingRight="@dimen/external_padding"
            android:paddingTop="@dimen/internal_padding"
            android:text="ОСАГО" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/internal_padding"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/external_padding"
            android:text="@string/edit"
            android:textAllCaps="true"
            android:textColor="@color/doveGray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/drop_shadow_gray"
            android:paddingBottom="@dimen/internal_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/mercury" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mercury"
            android:paddingBottom="@dimen/internal_padding"
            android:paddingTop="@dimen/internal_padding">

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="200dp"
                android:padding="@dimen/external_padding"
                android:text="Выйти"
                android:theme="@style/YellowButton" />
        </FrameLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>